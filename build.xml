<project basedir="." default="makejar" name="rosmop">
    <property name="target" value="1.6"/>
    <property name="source" value="1.6"/>
    <path id="rosmop.classpath">
        <pathelement location="bin"/>
    </path>
	
	<!--checking if for windows and non windows OS-->
		<condition property="isUnix">
			<os family="unix" />
		</condition>

		<condition property="isWindows">
			<os family="windows" />
		</condition>

	<!-- if the OS is windows call the target run.script.windows -->
	<target name="ifNotUnix" if="isWindows">
		<echo>Calling parser.bat</echo>
		<exec dir="scripts" executable="cmd" failonerror="true">
			<arg line="/c parsergen.bat"/>
		</exec>
	</target>

	<!-- if the OS is not windows call the target run.script.unix-->
	<target name="ifUnix" if="isUnix">
		<echo>Calling parser</echo>
	   	<exec executable="scripts/parsergen" failonerror="true">
		</exec>
	</target>
	
    <target name="init">
        <mkdir dir="bin"/>
        <!-- <copy includeemptydirs="false" todir="bin"> -->
        <!--     <fileset dir="src"> -->
        <!--         <exclude name="**/*.java"/> -->
        <!--     </fileset> -->
        <!-- </copy> -->
    </target>
    <target name="clean">
        <delete dir="bin"/>
		<delete dir="dist"/>
    </target>
    <target depends="clean" name="cleanall"/>
    <target depends="build-project" name="build"/>
    <target depends="init" name="build-project">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac destdir="bin" source="${source}" target="${target}">  <!-- debug="true" debuglevel="${debuglevel}" -->
            <src path="src"/>
            <classpath refid="rosmop.classpath"/>
        </javac>
    </target>
	<target name="makejar" description="Create Jar file" depends="ifUnix, ifNotUnix, build">
		<mkdir dir="dist" />
        <jar jarfile="dist/ROSMOP.jar" basedir="bin" />
	</target>
</project>
